<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="150720252326-1" author="lucas">
        <createTable tableName="tb_saldos">

            <column name="id" type="UNIQUEIDENTIFIER">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="valor" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>

            <column name="id_usuario" type="UNIQUEIDENTIFIER">
                <constraints nullable="false"
                             foreignKeyName="fk_saldos_cadastro"
                             referencedTableName="tb_cadastro"
                             referencedColumnNames="id"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>