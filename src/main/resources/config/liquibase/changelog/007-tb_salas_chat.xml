<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="150720252330-1" author="lucas">
        <createTable tableName="tb_salas_chat">
            <column name="id_sala" type="CHAR(36)">
                <constraints nullable="false"/>
            </column>

            <column name="mensagem" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>

            <column name="data_hora" type="DATETIME">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                constraintName="fk_salas_chat_salas"
                baseTableName="tb_salas_chat"
                baseColumnNames="id_sala"
                referencedTableName="tb_salas"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>